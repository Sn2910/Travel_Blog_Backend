create table destinations(
    id serial primary key,
    country varchar(255),
    city varchar(255),
    language varchar(255),
    country_coords varchar(500),
    city_info varchar(50000),
   
    background_img_id int,
    
  
   FOREIGN KEY (background_img_id) REFERENCES assets(id)
);
