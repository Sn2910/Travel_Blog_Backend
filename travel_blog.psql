create table hotels(
    id serial primary key,
    name varchar(255),
    description varchar(500),
    price float,
    url varchar(500),
    rating float,
    destination_id int,
     image_id int,
     FOREIGN KEY (destination_id) REFERENCES destinations(id),
     FOREIGN KEY (image_id) REFERENCES assets(id)

);
create table restuarants(
    id serial primary key,
    name varchar(255),
    description varchar(500),
    price float,
    url varchar(500),
    rating float,
    destination_id int,
    image_id int,
     FOREIGN KEY (destination_id) REFERENCES destinations(id),
 FOREIGN KEY (image_id) REFERENCES assets(id)

);
create table shops(
    id serial primary key,
    name varchar(255),
    description varchar(500),
    price float,
    url varchar(500),
    rating float,
    destination_id int,
     image_id int,
     FOREIGN KEY (destination_id) REFERENCES destinations(id),
     FOREIGN KEY (image_id) REFERENCES assets(id)
);

create table blogs(
    id serial primary key,
    user_name varchar(255),
    blog_date varchar(50),
    title varchar(255),
    rich_text varchar(50000),
    blog_image varchar(500)
);

